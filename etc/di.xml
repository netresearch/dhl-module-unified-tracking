<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- # interface preferences -->
    <preference for="Dhl\UnifiedTracking\Api\TrackingInfoProviderInterface" type="Dhl\UnifiedTracking\Model\TrackingInfoProvider"/>
    <preference for="Dhl\UnifiedTracking\Api\Data\TrackingErrorInterface" type="Dhl\UnifiedTracking\Model\Tracking\TrackingError"/>
    <preference for="Dhl\UnifiedTracking\Api\Data\TrackingEventInterface" type="Dhl\UnifiedTracking\Model\Tracking\TrackingEvent"/>
    <preference for="Dhl\UnifiedTracking\Api\Data\TrackingStatusInterface" type="Dhl\UnifiedTracking\Model\Tracking\TrackingStatus"/>

    <!-- # sdk preferences -->
    <preference for="Dhl\Sdk\UnifiedTracking\Api\ServiceFactoryInterface" type="Dhl\Sdk\UnifiedTracking\Service\ServiceFactory"/>

    <!-- # virtual types -->
    <virtualType name="Dhl\UnifiedTracking\Webservice\Pipeline\RequestTracksPipeline\Virtual" type="Dhl\ShippingCore\Webservice\Pipeline\Track\RequestTracksPipeline">
        <arguments>
            <argument name="stages" xsi:type="array">
                <item name="send" sortOrder="100" xsi:type="object">Dhl\UnifiedTracking\Webservice\Pipeline\Stage\SendRequestStage</item>
                <item name="mapResponse" sortOrder="200" xsi:type="object">Dhl\UnifiedTracking\Webservice\Pipeline\Stage\MapResponseStage</item>
            </argument>
            <argument name="artifactsContainerFactory" xsi:type="object">Dhl\UnifiedTracking\Webservice\Pipeline\ArtifactsContainerFactory\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Dhl\UnifiedTracking\Webservice\Pipeline\ArtifactsContainerFactory\Virtual" type="\Dhl\ShippingCore\Api\Data\Pipeline\ArtifactsContainerInterfaceFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Dhl\UnifiedTracking\Webservice\Pipeline\ArtifactsContainer</argument>
        </arguments>
    </virtualType>

    <!-- # argument di overrides -->
    <type name="Dhl\UnifiedTracking\Model\TrackingInfoProvider">
        <arguments>
            <argument name="trackingPipeline" xsi:type="object">Dhl\UnifiedTracking\Webservice\Pipeline\RequestTracksPipeline\Virtual</argument>
        </arguments>
    </type>
    <type name="Dhl\UnifiedTracking\Plugin\Carrier\GetTrackingDetails">
        <arguments>
            <argument name="trackingInfoProvider" xsi:type="object">Dhl\UnifiedTracking\Model\TrackingInfoProvider\Proxy</argument>
        </arguments>
    </type>

    <type name="Dhl\UnifiedTracking\Webservice\Pipeline\ResponseDataMapper">
        <plugin name="dhlgw_adjust_timezone" type="Dhl\UnifiedTracking\Plugin\ParcelDe\AdjustTimezone"/>
    </type>
</config>
