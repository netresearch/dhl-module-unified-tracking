<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- # interface preferences -->
    <preference for="Dhl\GroupTracking\Api\TrackingInfoProviderInterface" type="Dhl\GroupTracking\Model\TrackingInfoProvider"/>
    <preference for="Dhl\GroupTracking\Api\Data\TrackingStatusInterface" type="Dhl\GroupTracking\Model\TrackingStatus"/>
    <preference for="Dhl\GroupTracking\Api\Data\TrackingEventInterface" type="Dhl\GroupTracking\Model\TrackingEvent"/>

    <!-- # sdk preferences -->
    <preference for="Dhl\Sdk\Group\Tracking\Api\ServiceFactoryInterface" type="Dhl\Sdk\Group\Tracking\Service\ServiceFactory"/>

    <!-- # virtual types -->
    <virtualType name="Dhl\GroupTracking\Webservice\Pipeline\RequestTracksPipeline\Virtual" type="Dhl\ShippingCore\Webservice\Pipeline\Track\RequestTracksPipeline">
        <arguments>
            <argument name="stages" xsi:type="array">
                <item name="send" sortOrder="100" xsi:type="object">Dhl\GroupTracking\Webservice\Pipeline\Stage\SendRequestStage</item>
                <item name="mapResponse" sortOrder="200" xsi:type="object">Dhl\GroupTracking\Webservice\Pipeline\Stage\MapResponseStage</item>
            </argument>
            <argument name="artifactsContainerFactory" xsi:type="object">Dhl\GroupTracking\Webservice\Pipeline\ArtifactsContainerFactory\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Dhl\GroupTracking\Webservice\Pipeline\ArtifactsContainerFactory\Virtual" type="\Dhl\ShippingCore\Api\Data\Pipeline\ArtifactsContainerInterfaceFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Dhl\GroupTracking\Webservice\Pipeline\ArtifactsContainer</argument>
        </arguments>
    </virtualType>

    <!-- # argument di overrides -->
    <type name="Dhl\GroupTracking\Model\TrackingInfoProvider">
        <arguments>
            <argument name="trackingPipeline" xsi:type="object">Dhl\GroupTracking\Webservice\Pipeline\RequestTracksPipeline\Virtual</argument>
        </arguments>
    </type>
</config>
